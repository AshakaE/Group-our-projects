 <% provide(:title, 'No Group Projects') %>
<div class="min-h-5 flex items-center justify-center content-between flex-wrap bg-gray-50 w-full">
  <div class="w-full flex justify-between items-center rounded-lg shadow-md border-b-2 border-gray-300 px-5 py-5">
    <h5 class="text-xl">Total Amount</h5>
    <p class="font-bold"><%= number_with_precision(@projects.sum(:amount), :precision => 2) %> hrs</p>
  </div>

  <div class="w-full -mt-48 mx-3 self-stretch">
    <%= render @projects %>
  </div>


  <div class="w-full text-center py-4 text-white bg-secondary px-6">
    <div class="py-4 border-white border-2 rounded-lg hover:bg-secondaryDark duration-200">
      <%= link_to new_project_path do %>
        <span>NEW PROJECT</span>
      <% end %>
    </div>
  </div>
</div>