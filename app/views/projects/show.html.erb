<% provide(:title, 'Details') %>
<div class="min-h-5 flex items-center justify-center content-between flex-wrap bg-gray-50 w-full">
<ul class="mx-3 p-3 w-full bg-white mt-3 border border-gray-300 rounded-md">
  <%= show_alive %>
  <li class="">
    <div class="mt-2 mb-4 flex h-32">
      <%= show_proj_group(@project) %>
      <h4 class="my-auto pl-3"><%= @project.name %></h4>
    </div>
    <p><%= @project.description %></p>
  </li>

  <li class="pt-3 flex justify-between border-t mt-2">
    <p class="">project no.<%= @project.id %></p>
    <p class=""><small><%= @project.created_at.strftime('%d %b %Y at %l:%M%P') %></small></p>
  </li>

  <li class="flex justify-between p-0 pt-3 border-t mt-2">
    <p class="m-0">AMOUNT</p>
    <span class="font-bold"><%= number_with_precision(@project.amount, :precision => 2) %> hrs</span>
  </li>
</ul>
<%= show_alive %>
<div class="w-full text-center py-4 text-white bg-secondary px-6">
    <div class="py-4 border-white border-2 rounded-lg hover:bg-secondaryDark duration-200">
      <%= new_project %>
    </div>
  </div>
</div>